{
  "name": "Pinboard Plus",
  "version": "1.2",
  "description": "A better extension for Pinboard (http://pinboard.in). Easy to know current page has been saved or not.",
  "browser_action": {
     "default_icon": "icon_grey_19.png",
     "popup": "popup.html",
     "icons": ["icon_grey_19.png", "icon_black_19.png"]
  },
  "permissions": [
    "tabs",
    "http://*/*", 
    "https://*/*"
  ],
  "background_page": "background.html",
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["selection.js"],
      "all_frames": true
    }],
  "icons": {
    "16": "appicon_16.png",
    "48": "appicon_48.png",
    "128": "appicon_128.png"
  }
}